{
  "printWidth": 120,
  "singleQuote": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": "**/*.scss",
      "options": {
        "printWidth": 150,
        "tabWidth": 4
      }
    },
    {
      "files": "**/*.html",
      "options": {
        "parser": "angular",
        "printWidth": 120,
        "tabWidth": 4
      }
    }
  ],
  "plugins": ["prettier-plugin-organize-attributes"],
  "attributeGroups": [
    "$ANGULAR_ELEMENT_REF",
    "$ANGULAR_STRUCTURAL_DIRECTIVE",
    "$ANGULAR_OUTPUT",
    "$ANGULAR_TWO_WAY_BINDING",
    "$ANGULAR_INPUT",
    "$DEFAULT"
  ],
  "attributeSort": "ASC"
}
